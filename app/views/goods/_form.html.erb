<%= form_for(@good) do |f| %>
	<%= error_header @good %>

  <div class="field">
    <%= f.label      :title %>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
      <%= f.label        :price %>
      <%= f.number_field :price %>
  </div>
  
  <div class="field">
      <%= f.label     :description %>
      <%= f.text_area :description %>
  </div>
  
  <div class="field">
      <%= f.label     :category %>
      <%= f.select :category_id , Category.all.collect{ |c| [c.category_title, c.id] }%>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
