<%= form_tag market_search_path , :method => :get , :id => 'search-bar' do %>
	<%= label_tag "Keyword:" %>
	<%= text_field_tag :keyword %>
	<%= submit_tag 'Search'%>
<% end %>

<h1>Search</h1>

<h2>You're seraching "<%= @keyword %>"</h2>

<%= render :partial => 'goods' , :locals => { :goods => @results } %>

<%= link_to "Back to Market", market_path %>

<div class="page-foot">
	<%= will_paginate @results %>
</div>