<% if goods.empty? %>
<div>
	Sorry, our market doesn't have what you're looking for
</div>
<% else %>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Owner</th>
			<th>Price</th>
			<th>Category</th>
		</tr>
	</thead>
	<tbody>
		<% goods.each do |g| %>
			<tr>
				<td> <%= link_to g.title, good_path( g.id ) %></td>
				<td> <%= link_to g.user.user_name, market_search_path( :keyword => g.user.user_name ) %></td>
				<td> <%= g.price %></td>
				<td> <%= link_to g.category.category_title, market_category_path( :id => g.category.id ) %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<% end %>